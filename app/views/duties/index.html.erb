  <div class="col-sm-1"></div>
    <div id="calendar_generator" class="col-sm-8">
      <br>
        <div class="table_time">
            <% ('08:00'.to_time.to_i .. '22:00'.to_time.to_i).step(1.hour).each do |time| %>
              <% if time == '08:00'%>
                <div class="table_time_element"><%= Time.at(time).strftime('%H%M') %></div>
              <% else %>
                <div class="table_time_element"><%= Time.at(time).strftime('%H%M') %></div>
              <% end %>
            <% end %>
        </div>
        <div class="timetable">
          <% %w(Mon Tue Wed Thur Fri Sat Sun).each do |day| %>


              <div class="table_body">
                <div class="table_day_rows">
                  <% (1..2).each do |i| %>
                    <% if i == 1 %>
                      <div class="bg-warning table_day_cell"><%= day %></div>
                      <span class="bg-warning table_place1">AS7</span>
                      <% (1..15).each do |i| %>
                        <span class="table_time"></span>
                        <span class="table_time"></span>
                      <% end %>
                      <br>
                    <% else %>
                      <div class="bg-warning table_day_cell"></div>
                      <span class="bg-warning table_place2">YIH</span>
                      <% (1..15).each do |i| %>
                        <span class="table_time"></span>
                        <span class="table_time"></span>
                      <% end %>
                    <% end %>
                  <% end %>
                </div>
            </div>
          <% end %>
        </div>








