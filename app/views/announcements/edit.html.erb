<h1>Edit Announcement</h1>

<%= simple_form_for(@announcement, url: announcement_path) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title, required: true, autofocus: true %>
    <%= f.input :contents, required: true %>
    <%= f.input :date, required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, 'Edit' %>
  </div>
<% end %>
