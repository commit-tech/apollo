<h1>All Announcements</h1>

<table class="table">
  <tr>
    <th>Title</th>
    <th>Contents</th>
    <th>Date</th>
    <th>Created at</th>
    <th>Last Updated</th>
    <th></th>
    <th></th>
  </tr>
  <% @announcements.each do |a| %>
    <tr>
      <td><%= a.title %></td>
      <td><%= a.contents %></td>
      <td><%= a.date %></td>
      <td><%= a.created_at %></td>
      <td><%= a.updated_at %></td>
      <% if current_user.username == 'admin' %>
      <td><%= link_to 'Edit', edit_announcement_path(a)%></td>
      <td><%= link_to 'Delete', a, method: :delete%></td>
      <% end %>
    </tr>
  <% end %>
</table>
