<body class="jumbotron-body">
  <div id="jumbotron-narrow">

<% content_for :no_nav { 'true' } %>
<div id="jumbotron-title"><%= image_tag "nussu-commit-logo.png", style:"width: 200px" %></div>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :login, label: false, placeholder: 'Username or Email', required: false, autofocus: true %>
    <%= f.input :password, label: false, placeholder: 'Password', required: false %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in", class: "btn btn-default btn-primary", style: "width: 100%" %>
  </div>
  <br>
<% end %>

<%= render "devise/shared/links" %>
</div>
</body>
